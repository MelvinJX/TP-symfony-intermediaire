{% extends "bases_admin.html.twig" %}

{% block main %}
    <main>
        <h2>Produits(admin)</h2>
        <section>
            {% for product  in products %}
                <article>
                    <h3><a href="{{ path('admin_product', {'id' : product.id}) }}">{{ product.name }}</a></h3>
                    <p>{{ product.description }}</p>
                    <span>Prix : {{ product.price }}</span>
                    <span>Stock : {{ product.stock }}</span>
                    <a href="{{ path('admin_update_product', {'id' : product.id}) }}">Modifier</a>
                    <a href="{{ path('admin_delete_product', {'id' : product.id}) }}">Supprimer</a>
                </article>
            {% endfor %}
        </section>
    </main>
{% endblock %}