{% extends "bases.html.twig" %}

{% block main %}
    <main>
        <h2>Categories</h2>
        <section>
            {% for category  in categories %}
                <article>
                    <h3>{{ category.name }}</h3>
                    <p>{{ category.description }}</p>
                </article>
            {% endfor %}
        </section>
    </main>
{% endblock %}